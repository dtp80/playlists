{
  "name": "dp-updater",
  "version": "1.0.0",
  "description": "IPTV Playlist Manager - Manage Xtream Codes and M3U playlists",
  "main": "dist/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --exec ts-node src/server.ts",
    "client:dev": "cd client && npm run dev",
    "build": "npm run prisma:deploy && npm run prisma:generate && npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "cd client && npm run build",
    "start": "node dist/server.js",
    "setup": "npm install && cd client && npm install",
    "prisma:generate": "prisma generate",
    "prisma:deploy": "prisma db push"
  },
  "keywords": [
    "iptv",
    "m3u",
    "xtream-codes",
    "playlist"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "fast-xml-parser": "^5.3.0",
    "prisma": "^6.17.1",
    "saxes": "^6.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.2",
    "@types/node": "^20.19.21",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
